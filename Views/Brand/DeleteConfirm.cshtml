@model PassionProject.Models.Brand
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete @Model.Name?</h2>
<div class="option">
    <a href="/Brand/Show/@Model.BrandID">Cancel</a>
</div>
<form method="POST" action="/Brand/Delete/@Model.BrandID">
    <div class="input"><input type="submit" value="Confirm" /></div>
</form>